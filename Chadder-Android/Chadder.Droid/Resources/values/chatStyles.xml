<resources>
  <dimen name="chat_profile_size">30dp</dimen>
  <dimen name="Chat_Bubble_Margin_Screen">50dp</dimen>
  <dimen name="Chat_Bubble_Margin_Profile">5dp</dimen>
  <dimen name="Chat_Bubble_Padding_Pic">20dp</dimen>
  <dimen name="chat_bubble_corner_radius">5dp</dimen>
  <dimen name="chat_bubble_padding">5dp</dimen>

  <!-- Chat Messages Window -->
  <dimen name="Chat_Margin_Between">5dp</dimen>
  <dimen name="Chat_Padding_Screen">10dp</dimen>
  <dimen name="Chat_Media_Margin_Side">0dp</dimen>

  <dimen name="chat_bubble_arrow_size">10dp</dimen>
  <!--chat_profile_size - chat_bubble_arrow_size/2-->
  <dimen name="chat_bubble_arrow_margin_top">-5dp</dimen>
  <!--chat_profile_size/2 - chat_bubble_arrow_size/2-->
  <dimen name="chat_bubble_arrow_margin_side">10dp</dimen>
  
  
  <dimen name="chat_timer_margin_side">10dp</dimen>



  <color name="chat_bubble_contact_color">#FFEEEEEE</color>
  <color name="chat_bubble_my_color">@color/chadderred</color>
  <color name="chat_timer_color">#FFA0A0A0</color>
  <color name="chat_name_color">#FFA0A0A0</color>
  
  


  <style name="ChatMessage_profilePic">
		<item name="android:layout_width">@dimen/chat_profile_size</item>
		<item name="android:layout_height">@dimen/chat_profile_size</item>
		<item name="android:scaleType">fitCenter</item>
    <item name="android:padding">0dp</item>
    </style>
  <style name="ChatMessage_Arrow">
    <item name="android:layout_width">@dimen/chat_bubble_arrow_size</item>
    <item name="android:layout_height">@dimen/chat_bubble_arrow_size</item>
    <item name="android:layout_marginTop">@dimen/chat_bubble_arrow_margin_top</item>
    <item name="android:layout_marginLeft">@dimen/chat_bubble_arrow_margin_side</item>
    <item name="android:layout_marginRight">@dimen/chat_bubble_arrow_margin_side</item>
  </style>
    
    <style name="ChatMessage_BubbleLayer">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:minWidth">@dimen/chat_profile_size</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:orientation">vertical</item>
      <item name="android:padding">@dimen/chat_bubble_padding</item>
    </style>
    
    <style name="ChatMessage_Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_alignParentLeft">true</item>
      <item name="android:textColor">@android:color/background_dark</item>
      <item name="android:textColorLink">@android:color/background_dark</item>
      <item name="android:textSize">16sp</item>
      <item name="android:linksClickable">true</item>
      <item name="android:autoLink">all</item>
    </style>

  <style name="ChatMessage_Time">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/chat_profile_size</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/chat_timer_color</item>
    <item name="android:textStyle">italic</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginLeft">@dimen/chat_timer_margin_side</item>
    <item name="android:layout_marginRight">@dimen/chat_timer_margin_side</item>
  </style>
  <style name="ChatMessage_Name">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/chat_profile_size</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/chat_name_color</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="ChatMessage_Media">
    <item name="android:layout_width">150dp</item>
    <item name="android:layout_height">150dp</item>
    <item name="android:maxHeight">150dp</item>
    <item name="android:maxWidth">150dp</item>
    <item name="android:layout_marginTop">3dp</item>
    <!--<item name="android:layout_below">@id/chat_msg_time</item>-->
    <item name="android:visibility">visible</item>
    <item name="android:adjustViewBounds">true</item>
  </style>

  <style name="ChatMessage_StatusLayer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:visibility">visible</item>
    <item name="android:orientation">horizontal</item>
  </style>
    
  <style name="ChatMessage_MediaLayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Chat_Button">
    <item name="android:layout_height">40dp</item>
    <item name="android:background">@drawable/transparent_button</item>
    <item name="android:scaleType">fitCenter</item>
  </style>
</resources>

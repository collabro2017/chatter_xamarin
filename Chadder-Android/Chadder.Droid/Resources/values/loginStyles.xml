<resources>    
  <style name="Login_Field">
		<item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:background">#FFFFFFFF</item>
    <item name="android:ems">10</item>
    <item name="android:maxLines">1</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">#FF000000</item>
  </style>

  <style name="TourButton">
    <item name="android:layout_margin">20dp</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/chadderred</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="EncodedBackground">
    <item name="android:text">@string/EncodedContent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#10000000</item>
  </style>
</resources>
